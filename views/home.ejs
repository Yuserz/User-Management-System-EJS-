<% if (locals.removedUser) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<div class="row">
  <div class="col-6">
    <h1>Sk-users</h1>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    <% for(var i=0; i < rows.length; i++) { %>
    <tr>
      <th name="id" scope="row"><%=rows[i].id%></th>
      <td name="first_name"><%= rows[i].first_name %></td>
      <td name="last_name"><%= rows[i].last_name %></td>
      <td name="email"><%= rows[i].email %></td>
      <td name="phone"><%= rows[i].phone %></td>
      <td class="text-end">
        <a href="/edituser/<%= rows[i].id %>" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
        <a href="/<%= rows[i].id %>" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    <% } %>

  </tbody>
</table>
